<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray">

        <Button
            android:id="@+id/btn_history"
            android:layout_width="wrap_content"
            android:layout_height="20pt"
            android:layout_margin="1pt"
            android:backgroundTint="@color/number_gray"
            android:onClick="btnHistClick"
            android:text="History"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/calculation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_toRightOf="@id/btn_history"
            android:background="@color/bg_gray"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text="0" />
    </RelativeLayout>

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:background="@color/bg_gray"
        android:gravity="right|center"
        android:textSize="30pt"
        android:autoSizeMinTextSize="15pt"
        android:ellipsize="start"
        android:inputType="textPersonName"
        android:text="0"
        android:singleLine="true"
        android:maxLength="11"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_percent"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="%"
                android:onClick="btnPercentClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_root"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="\u221A"
                android:onClick="btnRootClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_square"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="x\u00B2"
                android:onClick="btnSqrClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_onex"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="¹⁄ₓ"
                android:onClick="btnOneXClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_ce"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="CE"
                android:onClick="btnCeClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_c"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="C"
                android:onClick="btnCClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="\u232b"
                android:onClick="btnBackClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_divide"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="\u00f7"
                android:onClick="btnDivideClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_seven"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="7"
                android:onClick="btn7Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_eight"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="8"
                android:onClick="btn8Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_nine"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="9"
                android:onClick="btn9Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_multiply"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="\u00d7"
                android:onClick="btnMultClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_four"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="4"
                android:onClick="btn4Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_five"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="5"
                android:onClick="btn5Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_six"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="6"
                android:onClick="btn6Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_subtract"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="-"
                android:onClick="btnSubClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_one"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="1"
                android:onClick="btn1Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_two"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="2"
                android:onClick="btn2Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_three"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="3"
                android:onClick="btn3Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_add"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="+"
                android:onClick="btnAddClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_plusminus"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="+/-"
                android:onClick="btnPlusMinClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_zero"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="0"
                android:onClick="btn0Click"
                android:textColor="@color/black"
                android:backgroundTint="@color/number_gray">
            </Button>
            <Button
                android:id="@+id/btn_point"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="."
                android:onClick="btnDecClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
            <Button
                android:id="@+id/btn_equals"
                android:layout_weight="1"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_margin="1pt"
                android:text="="
                android:onClick="btnEqualClick"
                android:textColor="@color/black"
                android:backgroundTint="@color/op_gray">
            </Button>
        </TableRow>

    </TableLayout>
</LinearLayout>